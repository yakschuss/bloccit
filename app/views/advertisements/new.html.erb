<h1>New Advertisement</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Advertisement</p>
    <ul>
      <li>I wake, reluctant;</li>
      <li>Too cold to get out of bed</li>
      <li>But I need to pee.</li>
    </ul>
  </div>
      <div class="col-md-8">
        <%= form_for @advertisement do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', placeholder: "Enter advertisement title" %>
        </div>
        <div class="form-group">
          <%= f.label :copy %>
          <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter advertisement copy" %>
        </div>
        <div class="form-group">
          <%= f.label :price %>
          <%= f.number_field :price, class: 'text_field', step: 'any'  %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
          <% end %>
      </div>
    </div>
