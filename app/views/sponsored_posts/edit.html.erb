<h1>Edit SponsoredPost</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for sponsored posts</p>
    <ul>
      <li>Haikus are easy</li>
      <li>But sometimes they don't make sense</li>
      <li>Refrigerator.</li>
    </ul>

  </div>
    <div class="col-md-8">
      <%= form_for [@sponsored_post.topic, @sponsored_post] do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', placeholder: "Enter SponsoredPost Title" %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter SponsoredPost Body" %>
        </div>
        <div class="form-group">
          <%= f.label :price %>
          <%= f.number_field :price %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
      <% end %>

    </div>
  </div>
